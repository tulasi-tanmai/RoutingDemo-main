
@{
    ViewData["Title"] = "User - Profile";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>@ViewData["Message"]</p>
</div>

<div class="card mt-4">
    <div class="card-body">
        <h5>User Information</h5>
        <p><strong>Username:</strong> @ViewData["Username"] (must be at least 3 characters)</p>
        <p><strong>Tab:</strong> @ViewData["Tab"] (optional parameter)</p>
    </div>
</div>

<p class="mt-4">
    <a href="/" >Back to Home</a>
</p>